{
  "name": "@openclaw/x-apify",
  "version": "1.0.1",
  "description": "Fetch X/Twitter data via Apify actors. Search tweets, get user profiles, retrieve specific tweets with replies. Features local caching.",
  "author": "robbyczgw-cla",
  "license": "MIT",
  "keywords": [
    "openclaw",
    "skill",
    "twitter",
    "x",
    "apify",
    "tweets",
    "social-media",
    "search",
    "scraping",
    "caching"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/robbyczgw-cla/x-apify.git"
  },
  "homepage": "https://clawhub.ai/robbyczgw-cla/x-apify",
  "bugs": {
    "url": "https://github.com/robbyczgw-cla/x-apify/issues"
  },
  "openclaw": {
    "skill": true,
    "triggers": [
      "twitter search",
      "tweet search",
      "x search",
      "get tweets",
      "twitter user"
    ],
    "capabilities": [
      "tweet-search",
      "user-profiles",
      "tweet-retrieval",
      "caching"
    ],
    "requirements": {
      "bins": [
        "python3"
      ],
      "env": {
        "APIFY_API_TOKEN": {
          "required": true,
          "description": "Apify API token"
        },
        "APIFY_ACTOR_ID": {
          "required": false,
          "default": "quacker~twitter-scraper"
        },
        "X_APIFY_CACHE_DIR": {
          "required": false,
          "description": "Custom cache directory"
        }
      }
    }
  },
  "files": [
    "SKILL.md",
    "README.md",
    "scripts/"
  ]
}
